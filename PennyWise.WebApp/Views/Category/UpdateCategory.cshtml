@model PennyWise.Data.Models.Category

@{
    ViewData["Title"] = "Update Category";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <form asp-action="UpdateCategory" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="CategoryName" class="form-label">Category Name</label>
            <input type="text" class="form-control" asp-for="Name" required maxlength="100" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

