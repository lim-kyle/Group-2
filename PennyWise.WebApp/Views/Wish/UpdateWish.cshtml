@model PennyWise.Data.Models.Wish

@{
    ViewData["Title"] = "Update Wish";
}

<div class="container mt-4">
    <h1>@ViewData["Title"]</h1>
    <form asp-action="UpdateWish" method="post">
        <input type="hidden" asp-for="Id" />
        <div class="mb-3">
            <label for="CategoryName" class="form-label">Wish</label>
            <input type="text" class="form-control" asp-for="WishName" required maxlength="100" />
            <span asp-validation-for="WishName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save changes</button>
        <a href="@Url.Action("Index", "Category")" class="btn btn-secondary">Cancel</a>
    </form>
</div>

