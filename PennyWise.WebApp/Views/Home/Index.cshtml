@{
    ViewData["Title"] = "Home Page";
}
<div class="container my-5">
    <div class="text-center">
        <h1 class="display-4">Welcome to <span class="text-primary">PennyWise</span></h1>
        <p class="lead">Your ultimate expense tracker for smarter financial decisions.</p>
        <p>Manage your budget, track your expenses, and save for the future—all in one place with PennyWise.</p>
        <div class="mt-4">
            <a class="btn btn-primary btn-lg me-2" href="#">Get Started</a>
            <a class="btn btn-outline-secondary btn-lg" href="#">Learn More</a>
        </div>
    </div>

    <hr class="my-5">

    <div class="row text-center">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Add Expenses</h5>
                    <p class="card-text">Log your daily expenses easily and keep track of your spending in real-time.</p>
                    <a href="#" class="btn btn-outline-primary">Add Now</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">View Reports</h5>
                    <p class="card-text">Analyze your spending habits with detailed reports and visual charts.</p>
                    <a href="#" class="btn btn-outline-primary">View Reports</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Manage Budgets</h5>
                    <p class="card-text">Set monthly budgets and track how well you're sticking to your financial goals.</p>
                    <a href="#" class="btn btn-outline-primary">Set Budget</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row text-center mt-5">
        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Create Categories</h5>
                    <p class="card-text">Organize your expenses by creating custom categories for better control.</p>
                    <a href="#" class="btn btn-outline-primary">Manage Categories</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Track Savings</h5>
                    <p class="card-text">Monitor your savings and stay motivated to reach your financial goals.</p>
                    <a href="#" class="btn btn-outline-primary">Track Savings</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mt-4 mt-md-0">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Expense Insights</h5>
                    <p class="card-text">Get valuable insights into your expenses and make informed financial decisions.</p>
                    <a href="#" class="btn btn-outline-primary">Get Insights</a>
                </div>
            </div>
        </div>
    </div>
</div>
